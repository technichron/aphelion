{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Aphelion",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.aphelion",
				"match": "\\b(nop|mov|out|in|add|adc|sub|sbb|jmp|call|jif|cif|ret|push|pop|and|or|not|cmp|scmp|shl|asl|lsl|asr|lsr|hcf|jez|jnz|jens|jeq|jne|jlt|jle|jgt|cez|cnz|ceq|cne|clt|cgt|cle|cge|nand|xor|xnor|jeans|uint8|sint8|uint16|sint16|char|string|file)\\b"
			},{  
				"name": "variable.parameter.register.aphelion",
				"match": "\\b[\\b\\$]*(?i)(ra|rb|rc|rd|re|rf|rgl|rgh|ril|rih|rjl|rjh|rkl|rkh|rpl|rph|rsl|rsh|rrl|rrh|rxl|rxh|ryl|ryh|rg|ri|rj|rk|rp|rs|rx|ry)\\b"
			},{  
				"name": "constant.character.decimal.aphelion",
				"match": "\\b[0-9]+\\b"
			},{  
				"name": "constant.character.hexadecimal.aphelion",
				"match": "\\b(0x)(?i)[A-F0-9]+\\b"
			},{  
				"name": "constant.character.binary.aphelion",
				"match": "\\b(?i)(0|1)+b\\b"
			},{  
				"match": "\\s*(@define|@import|@segment|@global|@macro|@endmacro)\\b ?([_a-zA-Z0-9\\\\/]*)?",
				"captures": {
					"1": { "name": "support.function.directive.aphelion" },
					"13": { "name": "entity.name.function.aphelion" }
				}
			},{  
				"name": "constant.character.char.aphelion",
				"match": "'.*?'"
			},{  
				"name": "comment.aphelion",
				"match": "(\\s)*#.*$"
			}]
		},
		"strings": {
			"name": "string.quoted.double.aphelion",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aphelion",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.aphel"
}